<% if @already_liked %>
  $(".<%= @liked_photo.id %>.already_liked_notice").css({'color': '#fff', 'background-color': 'red', 'z-index': '200' })
    .animate({'color':'#fff', 'background-color': 'transparent', 'z-index': '0' }, 5000);
<% else %>
  $("figure[data-id=<%= @liked_photo.id %>]")
    .find('.like_photo').css({ "background-color": "red", "color": "#fff" })
    .animate({'background-color':'#fff', "color": "#d10069" }, 2000);
    
  $("figure[data-id=<%= @liked_photo.id %>]")
    .find('.like_count').html("<%= pluralize(@liked_photo.like_count + 1, 'like') %>");
<% end %>