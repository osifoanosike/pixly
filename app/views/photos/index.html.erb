<section id="main-grid" class="col-md-8 col-sm-12">
  <% if @photos %>
    <%= render @photos %>
  <% else %>
    <h3>Oops! there are no photos to show!</h3>
  <% end %>
</section>

<section id="trending-grid" class="col-md-4 col-sm-0">
  <h4 class="well well-sm">Trending</h4>
  <% @trending_photos.each do |trending_photo| %>
    <%= render "shared/trending_photo", photo: trending_photo %>
  <% end %>
</section>
<div class="clearfix"></div>