<section id="welcome-header">
  <h3>Pixly - Beautiful Experiences</h3>
  <p>Please login to continue</p>
</section>
<section id="welcome-form">
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field form-section">
    <%= f.email_field :email, autofocus: true, placeholder: "Enter your email", class:"form-control" %>
  </div>

  <div class="field form-section">
    <%= f.password_field :password, autocomplete: "off", placeholder: "Enter your password", class:"form-control"  %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Sign in", class: "btn signin btn-lg btn-primary full-width" %>
  </div>
<% end %>
</section>
